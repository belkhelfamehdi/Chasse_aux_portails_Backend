generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role
  cities   City[] @relation("AdminDesCities")
}

model City {
  id        Int      @id @default(autoincrement())
  nom       String
  latitude  Float
  longitude Float
  rayon     Int
  adminId   Int?
  admin     Utilisateur? @relation("AdminDesCities", fields: [adminId], references: [id])
  pois      POI[]
}

model POI {
  id          Int     @id @default(autoincrement())
  nom         String
  description String
  latitude    Float
  longitude   Float
  iconUrl     String
  modelUrl    String
  cityId     Int
  city       City   @relation(fields: [cityId], references: [id])
}

enum Role {
  SUPER_ADMIN
  ADMIN
}
